$backgroundColor = #000;
$itemBgColor = #555;
$itemBgDarkColor = #333;
$foregroundColor = #fff;
$numberColor = #666;

html,
body {
	background-color: $backgroundColor;
	color: $foregroundColor;
	font-family: sans-serif;
	font-size: 14px;
	height: 100%;
	margin: 0 auto;
	padding: 0;
}

#container {
	counter-reset: performance;
	display: flex;
	flex-flow: column wrap;
	height: 100%;
	min-height: 22px * 16;
	list-style-type: none;
	margin: 0;
	padding: 0;

	li {
		background: linear-gradient($numberColor 0%, $itemBgColor 33%, $itemBgDarkColor 100%);
		border: 1px solid $backgroundColor;
		border-radius: 2px;
		box-sizing: border-box;
		cursor: move;
		height: 6.25%;
		width: 10%;
		margin: 0 1.25%;
		padding: 2px;
		position: relative;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
		z-index: 1;

		&::after {
			color: $numberColor;
			counter-increment: performance;
			content: counter(performance);
			font-size: 32px;
			font-weight: bold;
			position: absolute;
			right: 0;
			top: -6px;
			z-index: -1;
		}
	}

	.insertAfter {
		border-bottom-color: $foregroundColor;
	}
	.insertBefore {
		border-top-color: $foregroundColor;
	}
	.insertInto {
		border-color: $foregroundColor;
	}
}
